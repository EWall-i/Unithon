<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/nav_header_img" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="I'm..."
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/streetwear"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/my_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTJ"

        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/chosunilbo"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/changeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="@font/kitsch_text_extralight"
        android:text="Change My MBTI"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/myDiaryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="My Diary"
        android:fontFamily="@font/kitsch_text_extralight"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>